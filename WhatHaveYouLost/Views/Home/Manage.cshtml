<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width"/>
	<title>Gerenciamento das notícias</title>
	<link rel="stylesheet" href="styles.css">
</head>
<body>

<div class="container">
    	<div class="text-center mt-5">
    		<h1 class="display-4">Gerenciamento das notícias</h1>
    	</div>
    <a class="btn btn-primary" asp-controller="Home" asp-action="CreateNews">Criar Nova Notícia</a>
    <table class="table">
        <thead>
        <tr>
            <th>Título</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var newsItem in Model.NewsItems)
        {
            <tr>
                <td>@newsItem.Title</td>
                <td>
                    <a class="btn btn-info" asp-controller="Home" asp-action="UpdateNews" asp-route-id="@newsItem.Id">Editar</a>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="DeleteNews" asp-route-id="@newsItem.Id">Apagar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>