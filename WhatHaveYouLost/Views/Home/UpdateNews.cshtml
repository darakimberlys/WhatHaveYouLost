@model WhatYouHaveLost.Views.Models.UpsertModel

<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width"/>
	<title>Editar notícia selecionada</title>
	<link rel="stylesheet" href="styles.css">
</head>
<body>

<a class="btn btn-light" asp-controller="Home" asp-action="Manage">Voltar</a>
    <div class="text-center mt-5">
		<h1 class="display-4">Editar notícia selecionada</h1>
	</div>

<form asp-action="UpdateNews">
    <input type="hidden" asp-for="Title" />
    
    <div class="form-group">
        <label asp-for="Title">Título</label>
        <input asp-for="Title" class="form-control" value="@Model.Title"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Content">Conteúdo</label>
        <textarea asp-for="Content" class="form-control" rows="20">@Model.Content</textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="ImageLink">URL da Imagem</label>
        <input asp-for="ImageLink" class="form-control" value="@Model.ImageLink"/>
        <span asp-validation-for="ImageLink" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="AuthorLink">URL Fonte</label>
        <input asp-for="AuthorLink" class="form-control" value="@Model.AuthorLink"/>
        <span asp-validation-for="AuthorLink" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
</body>
</html>