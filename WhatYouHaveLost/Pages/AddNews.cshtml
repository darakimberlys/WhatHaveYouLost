@page "/addNews"
@model AddNewsModel
@{
    ViewData["Title"] = "Adicionar Notícia";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="title">Título:</label>
        <input type="text" class="form-control" id="title" asp-for="News.Title" required>
    </div>
    <div class="form-group">
        <label for="content">Conteúdo:</label>
        <textarea class="form-control" id="content" asp-for="News.Content" rows="10" required></textarea>
    </div>
    <div class="form-group">
        <label for="image">URL da Imagem:</label>
        <input type="text" class="form-control" id="image" asp-for="News.Image">
    </div>
    <div class="form-group">
        <label for="font">Fonte:</label>
        <input type="text" class="form-control" id="font" asp-for="News.Author">
    </div>
    <button type="submit" class="btn btn-primary">Adicionar Notícia</button>
</form>